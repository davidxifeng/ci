  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'toy'",
      "program": "${workspaceFolder}/target/debug/toy",
      "cargo": {
        "args": [
          "build",
          "--bin=toy",
          "--package=toy"
        ],
        "filter": {
          "name": "toy",
          "kind": "bin"
        }
      },
      "stopOnEntry": true,
      "args": ["parse"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'toy'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=toy",
          "--package=toy"
        ],
        "filter": {
          "name": "toy",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}